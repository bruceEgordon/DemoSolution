@using DemoSite.Models.ViewModels
@using DemoSite.Models.Pages
@model PageViewModel<FullRefreshDemo>

@Html.FullRefreshPropertiesMetaData(new[] { "ShowBanner" })

Show Banner:
@Html.PropertyFor(m => m.CurrentPage.ShowBanner)

@if (Model.CurrentPage.ShowBanner)
{
    <h2 @Html.EditAttributes(m => m.CurrentPage.BannerText)>
        @Model.CurrentPage.BannerText
    </h2>
}

@Html.PropertyFor(m => m.CurrentPage.MainBody)

<h4>Understanding links and URLs</h4>
<p>Simple Address - ExternalURL: @Model.CurrentPage.ExternalURL</p>
<p>Friendly URLSegment: @Model.CurrentPage.URLSegment</p>
<p>GUID Based LinkURL: @Model.CurrentPage.LinkURL</p>


